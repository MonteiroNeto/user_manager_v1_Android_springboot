<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alt_bg_img"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/ivLogoSignUp"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:src="@drawable/alt_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoSignUp">

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Sign Up Activity"
            android:textColor="@color/tropical_blue"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/edtFirstNameSignUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_field_styling"
                android:hint="Firs Name"
                android:paddingStart="8dp" />

            <EditText
                android:id="@+id/edtLastNameSignUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_field_styling"
                android:hint="Last Name"
                android:paddingStart="8dp" />


        </LinearLayout>

        <EditText
            android:id="@+id/edtEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/input_text_field_styling"
            android:hint="Email"
            android:paddingStart="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoSignUp">

            <EditText
                android:id="@+id/edtPasswordSignUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_field_styling"
                android:hint="Password"
                android:paddingStart="8dp" />

            <EditText
                android:id="@+id/edtConfirmPasswordSignUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/input_text_field_styling"
                android:hint="Confirm Password"
                android:paddingStart="8dp" />


        </LinearLayout>
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/alt_btn_styling"
            android:backgroundTint="@color/tropical_blue"
            android:text="Sign UP"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold|italic"
            />
        <TextView
            android:id="@+id/tvHaveAccountSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Already Have and account? Sign in"
            android:textColor="@color/tropical_blue"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_editor_absoluteX="16dp" />


        <Button
            android:id="@+id/btnBackHomeSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_back"
            android:layout_marginEnd="16dp"
            android:background="@drawable/alt_btn_styling"
            android:backgroundTint="@color/dark_royal_purple"
            android:text="Back To Home"
            android:textColor="@color/tropical_blue"
            android:textSize="14sp"
            android:padding="8dp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>