<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/alt_bg_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/ivLogoProfileAct"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:src="@drawable/alt_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoProfileAct">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="User Data:"
            android:textColor="@color/tropical_blue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvUserDataProfileAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="User Data:"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="18sp" />



        <Button
            android:id="@+id/btnBackHomeProfileAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:drawableLeft="@drawable/ic_back"
            android:layout_marginEnd="16dp"
            android:background="@drawable/alt_btn_styling"
            android:backgroundTint="@color/dark_royal_purple"
            android:text="Back To Home"
            android:textColor="@color/tropical_blue"
            android:textSize="14sp"
            android:padding="8dp"
            android:textStyle="bold|italic"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>